{
  "name": "user-management-system",
  "version": "1.0.0",
  "description": "A simple user management system based on concepts taught at BST.",
  "main": "backend/app.js",
  "scripts": {
    "server:dev": "cd backend && npm run start",
    "server-ts:dev": "cd backend-ts && npm run start",
    "client": "cd frontend && npm run start",
    "client-ts": "cd frontend-ts && npm run start",
    "dev": "concurrently --kill-others \"npm run server:dev\" \"npm run client\"",
    "dev-ts": "concurrently --kill-others \"npm run server-ts:dev\" \"npm run client-ts\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.1.0"
  }
}
